<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5DADF"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".MainActivity">

    <!-- wrap-content는 내부 텍스트의 길이에 따라 크기가 조정됨
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이것저것 테스트"
        app:backgroundTint="#43519C"></Button>
    -->

    <!-- 겹치는 부분은 요소들간 상하관계를 연결하고 이동하거=  나
         이동하고 infer Constraints 클릭
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textView1"></TextView>

    <RadioButton
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="여성"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        tools:layout_editor_absoluteX="0dp" />

    <RadioButton
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="남성"
        app:layout_constraintTop_toBottomOf="@+id/female"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:layout_width="300px"
        android:layout_height="300px"
        android:backgroundTint="#5D4783"
        app:layout_constraintTop_toBottomOf="@+id/male"
        tools:layout_editor_absoluteX="88dp"></Button>
    -->
    <!--
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:text="아래 빈칸을 채워주세요." />
    -->
    <!-- html의 input 태그와 비슷
         hint는 placeholder와 같은 기능을 함
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="여기에 이름을 입력해주세요."
        android:layout_marginBottom="200dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        tools:layout_editor_absoluteX="0dp"></Button>
     -->

    <!-- 버튼이 보여지는지 여부
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="visible Button1"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="16dp"></Button>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="invisible Button2"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:layout_editor_absoluteX="30dp"></Button>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="visible Button3"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        tools:layout_editor_absoluteX="44dp"></Button>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="gone Button4"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:layout_editor_absoluteX="30dp"></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="visible Button5"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        tools:layout_editor_absoluteX="30dp"></Button>
    -->

    <!-- 버튼이 사용가능한지 여부

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="enabled clickable Button1"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="1dp"></Button>

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="enabled false Button2"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        tools:layout_editor_absoluteX="30dp"></Button>

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="clickable false Button3"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        tools:layout_editor_absoluteX="30dp"></Button>
    -->

    <!-- xml에서 작성하고 자바 코드를 통해 속성을 변경
        두개 이상의 조건을 줄때는 |을 사용 -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text View 1"
        android:textSize="30dp"
        android:textStyle="italic|bold"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="5dp"></TextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Text View 2"
        android:textColor="#39A83E"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        tools:layout_editor_absoluteX="89dp"></TextView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Text View 3"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="47dp"></TextView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Text View 4"
        android:textSize="30dp"
        android:typeface="serif"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="101dp"></TextView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:text="Text View 5 Text View 5 Text View 5 Text View 5Text View 5Text View 5Text View 5Text View 5 Text View 5Text View 5Text View 5Text View 5Text View 5 Text View 5 vText View 5 Text View 5 Text View 5"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="16dp"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>